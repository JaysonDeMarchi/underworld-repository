{
	"env": {
		"es6": true,
		"node": true
	},
  "extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2022
	},
	"rules": {
		"indent": [ "error", "tab" ],
		"no-multiple-empty-lines": [ "error", { "max": 1 } ],
		"semi": [ "error", "always" ],
		"space-before-blocks": [ "error", "always"],
		"space-before-function-paren": [ "error", {
			"anonymous": "always",
			"named": "never",
			"asyncArrow": "always"
		}]
	}
}
